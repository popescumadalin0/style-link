@using StyleLink.Models
@using Microsoft.AspNetCore.Mvc.TagHelpers

@model AddServiceModel

@{
    ViewData["Title"] = "Add a new service";
    ViewData["HasFooter"] = true;
}
<p class="badge text-muted">Still in progress</p>
<section class="custom-container-sm mx-auto px-2 pt-3">
    <h2 class="text-center mt-3">Adaugă un seriviciu</h2>
    @using (Html.BeginForm("AddService", "Salon", FormMethod.Post, htmlAttributes: new
    {
        id = "serviceForm"
    }))
    {
        <div class="d-flex flex-column gap-2">
            <div class="form-group">
                @Html.LabelFor(model => model.Name)
                @Html.EditorFor(model => model.Name, new
                    {
                        htmlAttributes = new
                        {
                            placeholder = "Introduceți numele serviciului",
                            @class = "form-control",
                        }
                    })
                @Html.ValidationMessageFor(model => model.Name, "", new
                    {
                        @class = "text-danger"
                    })
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.Price)
                @Html.EditorFor(model => model.Price, new
                    {
                        htmlAttributes = new
                        {
                            placeholder = "Introduceți prețul serviciului",
                            @class = "form-control",
                        }
                    })
                @Html.ValidationMessageFor(model => model.Price, "", new
                    {
                        @class = "text-danger"
                    })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Currency)
                @Html.EditorFor(model => model.Currency, new
                    {
                        htmlAttributes = new
                        {
                            placeholder = "Introduceți moneda serviciului",
                            @class = "form-control",
                        }
                    })
                @Html.ValidationMessageFor(model => model.Currency, "", new
                    {
                        @class = "text-danger"
                    })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Time)
                @Html.EditorFor(model => model.Time, new
                    {
                        htmlAttributes = new
                        {
                            placeholder = "Introduceți durata serviciului",
                            @class = "form-control",
                        }
                    })
                @Html.ValidationMessageFor(model => model.Time, "", new
                    {
                        @class = "text-danger"
                    })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ServiceType.Name)
                @Html.DropDownListFor(model => model.ServiceType.Name, ViewBag.ServiceTypes as SelectList, new
                {
                    @class = "form-control"
                })
                @Html.ValidationMessageFor(model => model.ServiceType.Name, "", new
                {
                    @class = "text-danger"
                })
                <div class="d-flex flex-row gap-2">
                    @using (Html.BeginForm("AddServiceType", "Salon", FormMethod.Post, htmlAttributes: new
                    {
                        id = "serviceTypeForm"
                    }))
                    {
                        <div class="form-group w-100">
                            @Html.EditorFor(model => model.ServiceType.Name, new
                            {
                                htmlAttributes = new
                                {
                                    placeholder = "Introduceți un nou tip de serviciu",
                                    @class = "form-control",
                                }
                            })
                            @Html.ValidationMessageFor(model => model.ServiceType.Name, "", new
                            {
                                @class = "text-danger"
                            })
                        </div>
                        <button type="submit" class="btn my-2 my-sm-0 blue-background-color rounded-pill">+</button>
                    }
                </div>

            </div>
            <button type="submit" form="serviceForm" class="btn blue-background-color rounded-pill">Adaugă serviciu</button>
        </div>
    }
</section>