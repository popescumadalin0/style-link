                @Html.LabelFor(model => model.SalonName)
                @Html.EditorFor(model => model.SalonName, new
                    {
                        htmlAttributes = new
                        {
                            placeholder = "Introduceți numele salonului",
                            @class = "form-control",
                        }
                    })
                @Html.ValidationMessageFor(model => model.SalonName, "", new
                    {
                        @class = "text-danger"
                    })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Address)
                @Html.EditorFor(model => model.Address, new
                    {
                        htmlAttributes = new
                        {
                            placeholder = "Introduceți adresa salonului",
                            @class = "form-control",
                        }
                    })
                @Html.ValidationMessageFor(model => model.Address, "", new
                    {
                        @class = "text-danger"
                    })
            </div>
