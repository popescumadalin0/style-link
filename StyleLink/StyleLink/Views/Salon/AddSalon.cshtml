            <div class="card rounded-4 border-0 shadow">
                <div class="card-body">
                    <div class="card-title font-weight-bold">Hairstyliști</div>
                    <ul class="list-group">
                        <a class="list-group-item list-group-item-action active" asp-area="" asp-controller="Salon" asp-action="AddHairStylist">
                            Adaugă un nou hairstylist
                        </a>
                        @foreach (var hairstylist in Model.Hairstylists)
                        {
                            <li class="list-group-item">
                                <input class="form-check-input me-1" type="checkbox" value="" id="@hairstylist.Id">
                                <label class="form-check-label stretched-link" for="@hairstylist.Id">@hairstylist.FirstName + @hairstylist.LastName</label>
                                <label class="form-check-label stretched-link" for="@hairstylist.Id">@hairstylist.Email</label>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <button type="submit" class="btn blue-background-color rounded-pill">Adaugă salon</button>
