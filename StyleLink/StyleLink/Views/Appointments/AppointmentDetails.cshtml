@using System.Globalization
@model StyleLink.Models.AppointmentDetailModel
@{
    ViewData["Title"] = "Programări";
    ViewData["HasFooter"] = false;
}
<div class="d-flex justify-content-center">
    <div class="d-flex flex-row w-100">
        <div class="card border-0 rounded-end-pill shadow">
            <div class="card border-0 shadow-sm">
                <div class="d-flex flex-row">
                    <button onclick="history.back()" class="bg-transparent border-0">
                        <i class="bi bi-arrow-left-short fs-1 p-0 text-dark"></i>
                    </button>
                    <div class="card-body w-100 d-flex justify-content-center align-items-center">
                        <strong class="card-title m-0">Detalii Programare</strong>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="pb-4">
                    <div class="card border-0 rounded-end-pill shadow-sm gray-color">
                        <div class="card-body">
                            <div class="d-flex flex-column gap-2">
                                <div class="d-flex flex-column gap-2">
                                    <span>@Model.AppointmentStatus</span>
                                    <h4>
                                        <strong>
                                            @($"{Model.StartDate.ToString("ddd d MMM", CultureInfo.CreateSpecificCulture("ro-RO"))} - {Model.StartDate:HH:mm}")
                                        </strong>
                                    </h4>
                                </div>
                                <hr />
                                <div class="d-flex flex-column gap-2">
                                    <div class="d-flex flex-row justify-content-between gap-xl-5">
                                        <div class="d-flex flex-row gap-2">
                                            <i class="bi bi-check-circle text-muted fs-5"></i>
                                            <div class="d-flex flex-column">
                                                <strong class="fs-6">@Model.ServiceType</strong>
                                                <span>@($"{Model.HairStylistName} - {Model.SalonName}")</span>
                                                <span class="text-muted">@($"{(Model.EndDate - Model.StartDate):mm} min")</span>
                                            </div>
                                        </div>
                                        <strong class="fs-6">
                                            @($"{Model.ServicePrice} {Model.Currency}")
                                        </strong>
                                    </div>
                                </div>
                                <hr />
                                <div class="d-flex justify-content-center">
                                    <button class="btn blue-background-color rounded-pill">Programează din nou</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex flex-column">
                    <div class="d-flex flex-row justify-content-between mb-3">
                        <strong class="fs-6">@Model.SalonName</strong>
                        <a asp-area="" asp-controller="Salon" asp-action="Salon" asp-route-id="@Model.SalonId.ToString()">Vezi detalii</a>
                    </div>
                    <div class="d-flex flex-row gap-3">
                        <i class="bi bi-telephone text-muted fs-5"></i>
                        <span class="fs-6">@Model.SalonPhoneNumber</span>
                    </div>
                    <hr />
                    <div class="d-flex flex-row gap-3">
                        <i class="bi bi-geo-alt text-muted fs-5"></i>
                        <span class="fs-6">@Model.SalonAddress</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="flex-grow-1">
            <div class="position-sticky" style="height: calc(-200px + 100vh);">
                <iframe src="@Url.Content(Model.MapsUrl)" width="100%" height="100%" style="border: 0;" frameborder="0" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</div>