@using StyleLink.Models
@using Microsoft.AspNetCore.Mvc.TagHelpers

@model AddHairStylistModel

@{
    ViewData["Title"] = "Add a new hairstylist";
    ViewData["HasFooter"] = true;
}
<p class="badge text-muted">Still in progress</p>
<section class="custom-container-sm mx-auto px-2 pt-3">
    <h2 class="text-center mt-3">Adaugă un hairstylist</h2>
    @using (Html.BeginForm("AddHairStylist", "Hairstylist", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="d-flex flex-column gap-2">
            <div class="form-group">
                @Html.LabelFor(model => model.FirstName)
                @Html.EditorFor(model => model.FirstName, new
                    {
                        htmlAttributes = new
                        {
                            placeholder = "Introduceți prenumele hairstylistului",
                            @class = "form-control",
                        }
                    })
                @Html.ValidationMessageFor(model => model.FirstName, "", new
                    {
                        @class = "text-danger"
                    })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.LastName)
                @Html.EditorFor(model => model.LastName, new
                    {
                        htmlAttributes = new
                        {
                            placeholder = "Introduceți numele hairstylistului",
                            @class = "form-control",
                        }
                    })
                @Html.ValidationMessageFor(model => model.LastName, "", new
                    {
                        @class = "text-danger"
                    })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Email)
                @Html.EditorFor(model => model.Email, new
                    {
                        htmlAttributes = new
                        {
                            placeholder = "Introduceți email-ul hairstylistului",
                            @class = "form-control",
                        }
                    })
                @Html.ValidationMessageFor(model => model.Email, "", new
                    {
                        @class = "text-danger"
                    })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.PhoneNumber)
                @Html.EditorFor(model => model.PhoneNumber, new
                    {
                        htmlAttributes = new
                        {
                            placeholder = "Introduceți numărul de telefon al hairstylistului",
                            @class = "form-control",
                        }
                    })
                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new
                    {
                        @class = "text-danger"
                    })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password)
                @Html.EditorFor(model => model.Password, new
                    {
                        htmlAttributes = new
                        {
                            placeholder = "Introduceți o parolă",
                            @class = "form-control",
                        }
                    })
                @Html.ValidationMessageFor(model => model.Password, "", new
                    {
                        @class = "text-danger"
                    })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ConfirmPassword)
                @Html.EditorFor(model => model.ConfirmPassword, new
                    {
                        htmlAttributes = new
                        {
                            placeholder = "Reintroduceți parola",
                            @class = "form-control",
                        }
                    })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new
                    {
                        @class = "text-danger"
                    })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ProfileImage)
                @Html.EditorFor(model => model.ProfileImage, new
                    {
                        htmlAttributes = new
                        {
                            placeholder = "Introduceti imaginea de profil",
                            @class = "form-control",
                        }
                    })
                @Html.ValidationMessageFor(model => model.ProfileImage, "", new
                    {
                        @class = "text-danger"
                    })
            </div>

            <div class="card rounded-4 border-0 shadow">
                <div class="card-body">
                    <div class="card-title font-weight-bold">Servicii</div>
                    <a class="list-group-item list-group-item-action active" asp-area="" asp-controller="Service" asp-action="AddService">
                        Adaugă un nou serviciu
                    </a>
                    <div class="card rounded-4 border-0 shadow">
                        <div class="card-body">
                            @for (var i = 0; i < ViewBag.Services.Count; i++)
                            {
                                <div class="card-title">@ViewBag.Services[i].Text</div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ServiceDetails[i].IsUsed)
                                    @Html.CheckBoxFor(model => model.ServiceDetails[i].IsUsed, new
                                    {
                                        htmlAttributes = new
                                        {
                                            placeholder = "Folositi acest serviciu?",
                                            @class = "form-control",
                                        }
                                    })
                                    @Html.ValidationMessageFor(model => model.ServiceDetails[i].IsUsed, "", new
                                    {
                                        @class = "text-danger"
                                    })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ServiceDetails[i].Price)
                                    @Html.EditorFor(model => model.ServiceDetails[i].Price, new
                                        {
                                            htmlAttributes = new
                                            {
                                                placeholder = "Introduceți prețul serviciului",
                                                @class = "form-control",
                                            }
                                        })
                                    @Html.ValidationMessageFor(model => model.ServiceDetails[i].Price, "", new
                                        {
                                            @class = "text-danger"
                                        })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ServiceDetails[i].Currency)
                                    @Html.EditorFor(model => model.ServiceDetails[i].Currency, new
                                        {
                                            htmlAttributes = new
                                            {
                                                placeholder = "Introduceți moneda serviciului",
                                                @class = "form-control",
                                            }
                                        })
                                    @Html.ValidationMessageFor(model => model.ServiceDetails[i].Currency, "", new
                                        {
                                            @class = "text-danger"
                                        })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ServiceDetails[i].Time)
                                    @Html.EditorFor(model => model.ServiceDetails[i].Time, new
                                        {
                                            htmlAttributes = new
                                            {
                                                placeholder = "Introduceți durata serviciului",
                                                @class = "form-control",
                                            }
                                        })
                                    @Html.ValidationMessageFor(model => model.ServiceDetails[i].Time, "", new
                                        {
                                            @class = "text-danger"
                                        })
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn blue-background-color rounded-pill">Adaugă hairstylist</button>
        </div>
    }
</section>