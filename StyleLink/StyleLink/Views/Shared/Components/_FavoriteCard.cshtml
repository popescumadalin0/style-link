@model StyleLink.Models.FavoriteModel

<div class="card shadow rounded-end-pill border-0">
    <div class="card-body d-flex flex-column gap-2">
        <div class="position-relative">
            <div class="overflow-auto no-scrollbar" style="width: 100%;">
                <div class="d-flex px-1" style="width: max-content;">
                @foreach (var image in Model.ImagesTest)
                {
                    <div class="position-relative rounded-pill ml-0" style="height: 200px; width: 200px;">
                            <img src="@Url.Content(image)" style="height: 200px; width: 200px;" alt="Salon Image" />
                    </div>
                }
            </div>
            </div>
        </div>
        <div class="d-flex flex-row justify-content-between">
            <div class="d-flex flex-column justify-content-between">
                <h5><strong>@Model.SalonName</strong></h5>
                <div class="d-flex flex-row gap-1">
                    <i class="bi bi-star-fill rating-color"></i>
                    <strong>@Model.SalonRating</strong>
                    <p class="gray-color">@($"({Model.NumberOfEvaluations} evaluări)")</p>
                </div>
                <h6 class="gray-color">@Model.Address</h6>
            </div>
            <div class="d-flex flex-column align-content-center justify-content-center">
                <img class="rounded-circle" width="60px" height="60px" src="~/images/fb.jpg" alt="Profile Image"></img>
            </div>
        </div>
    </div>
</div>
